<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/cosmic_background">

    <!-- Cosmic Background -->
    <ImageView
        android:id="@+id/ivCosmicBackground"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:src="@drawable/metanoia_cosmic_background"
        android:scaleType="centerCrop"
        android:alpha="0.9"
        android:contentDescription="Cosmic background"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent" />

    <!-- Overlay for better text visibility -->
    <View
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="#40000000"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent" />

    <!-- Content Container -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:gravity="center"
        android:padding="32dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent">

        <!-- Butterfly Logo + Metanoia Branding -->
        <ImageView
            android:id="@+id/ivLogo"
            android:layout_width="280dp"
            android:layout_height="200dp"
            android:layout_marginBottom="40dp"
            android:src="@drawable/metanoia_butterfly_logo"
            android:contentDescription="Metanoia Unlimited Logo"
            android:scaleType="fitCenter" />

        <!-- Tree of Life / Sacred Geometry -->
        <ImageView
            android:id="@+id/ivTreeOfLife"
            android:layout_width="200dp"
            android:layout_height="300dp"
            android:layout_marginBottom="60dp"
            android:src="@drawable/metanoia_tree_of_life"
            android:contentDescription="Tree of Life"
            android:scaleType="fitCenter" />

        <!-- Username Field -->
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Username"
            android:textColor="#E0E0FF"
            android:textSize="16sp"
            android:layout_marginBottom="8dp"
            android:paddingStart="16dp"
            android:paddingEnd="16dp"/>

        <com.google.android.material.textfield.TextInputLayout
            android:id="@+id/tilUsername"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="24dp"
            app:boxStrokeColor="#8B7BE8"
            app:hintTextColor="#B8B0FF"
            app:boxBackgroundColor="#30000080"
            style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox">

            <com.google.android.material.textfield.TextInputEditText
                android:id="@+id/etUsername"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textColor="#FFFFFF"
                android:textColorHint="#B8B0FF"
                android:drawableStart="@android:drawable/ic_menu_myplaces"
                android:drawablePadding="12dp"
                android:drawableTint="#8B7BE8"
                android:padding="16dp" />
        </com.google.android.material.textfield.TextInputLayout>

        <!-- Password Field -->
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Password"
            android:textColor="#E0E0FF"
            android:textSize="16sp"
            android:layout_marginBottom="8dp"
            android:paddingStart="16dp"
            android:paddingEnd="16dp"/>

        <com.google.android.material.textfield.TextInputLayout
            android:id="@+id/tilPassword"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="32dp"
            app:boxStrokeColor="#8B7BE8"
            app:hintTextColor="#B8B0FF"
            app:boxBackgroundColor="#30000080"
            app:endIconMode="password_toggle"
            app:endIconTint="#8B7BE8"
            style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox">

            <com.google.android.material.textfield.TextInputEditText
                android:id="@+id/etPassword"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:inputType="textPassword"
                android:textColor="#FFFFFF"
                android:textColorHint="#B8B0FF"
                android:drawableStart="@android:drawable/ic_lock_idle_lock"
                android:drawablePadding="12dp"
                android:drawableTint="#8B7BE8"
                android:padding="16dp" />
        </com.google.android.material.textfield.TextInputLayout>

        <!-- Login Button (Neon Style) -->
        <Button
            android:id="@+id/btnLogin"
            android:layout_width="match_parent"
            android:layout_height="64dp"
            android:text="LOGIN"
            android:textSize="18sp"
            android:textStyle="bold"
            android:textColor="#FFFFFF"
            android:background="@drawable/neon_button_background"
            android:layout_marginBottom="24dp" />

        <!-- Google Sign In Button -->
        <Button
            android:id="@+id/btnGoogleSignIn"
            android:layout_width="match_parent"
            android:layout_height="56dp"
            android:text="Sign in with Google"
            android:textColor="#8B7BE8"
            android:backgroundTint="#30FFFFFF"
            style="@style/Widget.MaterialComponents.Button.OutlinedButton"
            app:strokeColor="#8B7BE8"
            app:strokeWidth="2dp" />

    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>
