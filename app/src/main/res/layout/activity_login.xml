<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto" android:layout_width="match_parent" android:layout_height="match_parent" android:background="@drawable/login_background" android:fillViewport="true">

    <androidx.constraintlayout.widget.ConstraintLayout android:layout_width="match_parent" android:layout_height="wrap_content" android:padding="24dp">

        <!-- Butterfly Logo -->
        <ImageView android:id="@+id/ivButterfly" android:layout_width="120dp" android:layout_height="80dp" android:src="@drawable/metanoia_butterfly_logo" android:contentDescription="Metanoia Logo" app:layout_constraintTop_toTopOf="parent" app:layout_constraintStart_toStartOf="parent" app:layout_constraintEnd_toEndOf="parent" android:layout_marginTop="32dp"/>

        <!-- METANOIA UNLIMITED Title -->
        <TextView android:id="@+id/tvMetanoiaTitle" android:layout_width="wrap_content" android:layout_height="wrap_content" android:text="METANOIA" android:textSize="42sp" android:textStyle="bold" android:textColor="#E94BC7" android:shadowColor="#E94BC7" android:shadowRadius="20" android:shadowDx="0" android:shadowDy="0" android:letterSpacing="0.1" app:layout_constraintTop_toBottomOf="@id/ivButterfly" app:layout_constraintStart_toStartOf="parent" app:layout_constraintEnd_toEndOf="parent" android:layout_marginTop="16dp"/>

        <TextView android:id="@+id/tvUnlimited" android:layout_width="wrap_content" android:layout_height="wrap_content" android:text="UNLIMITED" android:textSize="24sp" android:textStyle="bold" android:textColor="#8B7BE8" android:shadowColor="#8B7BE8" android:shadowRadius="15" android:shadowDx="0" android:shadowDy="0" android:letterSpacing="0.2" app:layout_constraintTop_toBottomOf="@id/tvMetanoiaTitle" app:layout_constraintStart_toStartOf="parent" app:layout_constraintEnd_toEndOf="parent" android:layout_marginTop="4dp"/>

        <!-- Tree of Life -->
        <ImageView android:id="@+id/ivTreeOfLife" android:layout_width="180dp" android:layout_height="220dp" android:src="@drawable/metanoia_tree_of_life" android:contentDescription="Tree of Life" app:layout_constraintTop_toBottomOf="@id/tvUnlimited" app:layout_constraintStart_toStartOf="parent" app:layout_constraintEnd_toEndOf="parent" android:layout_marginTop="24dp"/>

        <!-- Username Label -->
        <TextView android:id="@+id/tvUsernameLabel" android:layout_width="wrap_content" android:layout_height="wrap_content" android:text="Username" android:textSize="16sp" android:textColor="#FFFFFF" android:shadowColor="#8B7BE8" android:shadowRadius="8" app:layout_constraintTop_toBottomOf="@id/ivTreeOfLife" app:layout_constraintStart_toStartOf="parent" android:layout_marginTop="32dp" android:layout_marginStart="8dp"/>

        <!-- Username Input -->
        <EditText android:id="@+id/etEmail" android:layout_width="0dp" android:layout_height="56dp" android:hint="" android:inputType="textEmailAddress" android:background="@drawable/neon_text_glow" android:textColor="#FFFFFF" android:textColorHint="#80FFFFFF" android:paddingStart="16dp" android:paddingEnd="16dp" android:drawableStart="@drawable/ic_google_logo" android:drawablePadding="12dp" app:layout_constraintTop_toBottomOf="@id/tvUsernameLabel" app:layout_constraintStart_toStartOf="parent" app:layout_constraintEnd_toEndOf="parent" android:layout_marginTop="8dp"/>

        <!-- Password Label -->
        <TextView android:id="@+id/tvPasswordLabel" android:layout_width="wrap_content" android:layout_height="wrap_content" android:text="Password" android:textSize="16sp" android:textColor="#FFFFFF" android:shadowColor="#8B7BE8" android:shadowRadius="8" app:layout_constraintTop_toBottomOf="@id/etEmail" app:layout_constraintStart_toStartOf="parent" android:layout_marginTop="20dp" android:layout_marginStart="8dp"/>

        <!-- Password Input -->
        <EditText android:id="@+id/etPassword" android:layout_width="0dp" android:layout_height="56dp" android:hint="* * * *" android:inputType="textPassword" android:background="@drawable/neon_text_glow" android:textColor="#FFFFFF" android:textColorHint="#80FFFFFF" android:paddingStart="16dp" android:paddingEnd="16dp" android:drawableStart="@drawable/ic_google_logo" android:drawablePadding="12dp" app:layout_constraintTop_toBottomOf="@id/tvPasswordLabel" app:layout_constraintStart_toStartOf="parent" app:layout_constraintEnd_toEndOf="parent" android:layout_marginTop="8dp"/>

        <!-- Login Button -->
        <Button android:id="@+id/btnLogin" android:layout_width="0dp" android:layout_height="60dp" android:text="LOGIN" android:textSize="20sp" android:textStyle="bold" android:textColor="#FFFFFF" android:background="@drawable/neon_login_button" android:shadowColor="#8B7BE8" android:shadowRadius="15" app:layout_constraintTop_toBottomOf="@id/etPassword" app:layout_constraintStart_toStartOf="parent" app:layout_constraintEnd_toEndOf="parent" android:layout_marginTop="32dp"/>

        <!-- Marketing Opt-in -->
        <CheckBox android:id="@+id/cbMarketingOptIn" android:layout_width="wrap_content" android:layout_height="wrap_content" android:text="Send me deals &amp; updates" android:textColor="#FFFFFF" android:checked="false" app:layout_constraintTop_toBottomOf="@id/btnLogin" app:layout_constraintStart_toStartOf="parent" app:layout_constraintEnd_toEndOf="parent" android:layout_marginTop="16dp"/>

        <!-- Register Button -->
        <Button android:id="@+id/btnRegister" android:layout_width="0dp" android:layout_height="wrap_content" android:text="Register New Account" android:textColor="#8B7BE8" android:background="@android:color/transparent" style="@style/Widget.MaterialComponents.Button.TextButton" app:layout_constraintTop_toBottomOf="@id/cbMarketingOptIn" app:layout_constraintStart_toStartOf="parent" app:layout_constraintEnd_toEndOf="parent" android:layout_marginTop="8dp"/>

        <!-- Progress Bar -->
        <ProgressBar android:id="@+id/progressBar" android:layout_width="wrap_content" android:layout_height="wrap_content" android:visibility="gone" app:layout_constraintTop_toBottomOf="@id/btnRegister" app:layout_constraintStart_toStartOf="parent" app:layout_constraintEnd_toEndOf="parent" android:layout_marginTop="16dp" android:layout_marginBottom="24dp"/>

    </androidx.constraintlayout.widget.ConstraintLayout>
</ScrollView>
