<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="24dp"
    android:gravity="center_horizontal"
    android:background="#FFFFFF">

    <TextView
        android:id="@+id/tvHeadline"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Unlock Premium Conversions"
        android:textSize="24sp"
        android:textStyle="bold"
        android:textColor="#000000"
        android:layout_marginBottom="32dp"/>

    <!-- Photo Premium Card -->
    <com.google.android.material.card.MaterialCardView
        android:id="@+id/cardPhotoPremium"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:cardCornerRadius="12dp"
        app:cardElevation="4dp"
        app:strokeColor="#6200EE"
        app:strokeWidth="1dp"
        android:layout_marginBottom="16dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="16dp">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Unlimited Photos + 1 Video/Day"
                android:textStyle="bold"
                android:textSize="18sp"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="$2.99 one-time"
                android:textColor="#6200EE"
                android:layout_marginTop="4dp"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="• Unlimited photo conversions\n• Batch HEIC to JPG/PNG/WebP\n• 1 video conversion per day\n• No ads"
                android:layout_marginTop="8dp"/>

            <Button
                android:id="@+id/btnUnlockPhoto"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Unlock for $2.99"
                android:layout_marginTop="12dp"/>
        </LinearLayout>
    </com.google.android.material.card.MaterialCardView>

    <!-- Video Premium Card -->
    <com.google.android.material.card.MaterialCardView
        android:id="@+id/cardVideoPremium"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:cardCornerRadius="12dp"
        app:cardElevation="4dp"
        app:strokeColor="#03DAC5"
        app:strokeWidth="1dp"
        android:layout_marginBottom="16dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="16dp">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Unlimited Video Conversions"
                android:textStyle="bold"
                android:textSize="18sp"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="$19.99 one-time"
                android:textColor="#03DAC5"
                android:layout_marginTop="4dp"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="• Unlimited MOV → MP4 conversions\n• Full re-encode for compatibility\n• Unlimited photo conversions\n• No ads. Lifetime access."
                android:layout_marginTop="8dp"/>

            <Button
                android:id="@+id/btnUnlockVideo"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Unlock for $19.99"
                android:layout_marginTop="12dp"
                android:backgroundTint="#03DAC5"/>
        </LinearLayout>
    </com.google.android.material.card.MaterialCardView>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Purchases restore automatically on this Google account."
        android:textSize="12sp"
        android:gravity="center"
        android:layout_marginTop="16dp"/>

</LinearLayout>
