<?xml version="1.0" encoding="utf-8"?>
<layer-list xmlns:android="http://schemas.android.com/apk/res/android">
    <!-- Cosmic gradient background -->
    <item>
        <shape android:shape="rectangle">
            <gradient android:angle="135" android:startColor="#0A0520" android:centerColor="#1A0B3F" android:endColor="#2D1250" android:type="linear" />
        </shape>
    </item>

    <!-- Stars overlay -->
    <item>
        <shape android:shape="rectangle">
            <gradient android:angle="90" android:startColor="#20FFFFFF" android:centerColor="#10FFFFFF" android:endColor="#30FFFFFF" android:type="radial" android:gradientRadius="500" />
        </shape>
    </item>
</layer-list>
